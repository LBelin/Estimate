<center>
<h1><u>Features</u></h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date Added</th>
      <th>Estimated<br>Time<br>(hours)</th>
      <th>Actual<br>Time<br>(hours)</th>
      <th>Number<br>of<br> cases</th>
      <th>Percentage</th>
      <th>Resolved?</th>
      <th>Active?</th>
    </tr>
  </thead>

  <tbody>
    <!-- <% if Feature.all.count == 0%><tr></tr><%end%> Blank row if empty?-->
    <% @features.each do |feature| %>
      <tr>
        <td><%= link_to feature.title, feature %></td>
        <td><%= feature.created_at.strftime('%m-%d-%Y') %> </td>
        <td><%= feature.estimate %></td>
        <td><%= feature.current %></td>
        <td><%= feature.num_cases %></td>
        <td><%= feature.percentage%>%</td>

      <% if feature.resolved %>
        <td><%= link_to 'Unresolve', edit_feature_path(id:feature.id, resolved:false) %></td>
      <%else%>
        <td><%= link_to 'Resolve', edit_feature_path(id:feature.id, resolved:true) %></td>
      <%end%>

      <% if feature.active %>
        <td><%= link_to 'Deactivate', edit_feature_path(id:feature.id, active:false) %></td>
      <%else%>
        <td><%= link_to 'Activate', edit_feature_path(id:feature.id, active:true) %></td>
      <%end%>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

Create a feature:<%=render 'form'%>
</center>
